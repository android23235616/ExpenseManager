<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.soumyadeb.expensemanager">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="EXP Manager"></activity>
        <activity
            android:name=".AddTripActivity"
            android:label="New Trip" />
        <activity
            android:name=".CurrentTripActivity"
            android:label="Current Trip" />
        <activity android:name=".AllTripsActivity" />
        <activity
            android:name=".AddExpenseActivity"
            android:label="New Expense" />
        <activity android:name=".AllExpensesActivity" />
        <activity
            android:name=".EditTripActivity"
            android:label="Edit Trip" />
        <activity
            android:name=".TripSummaryActivity"
            android:label="Trip Summary" />
        <activity
            android:name=".AboutActivity"
            android:label="About" />
        <activity
            android:name=".EditExpenseActivity"
            android:label="Edit Expense" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>